@model FormulaUno.Models.DriversPageViewModel
@{
    ViewData["Title"] = "Conductores de F1";
}

<section class="text-center mb-4">
    <h1 class="display-6 fw-bold f1-hero-title">Conductores de F1</h1>
    <p class="text-light-50">Nombre y nacionalidad (lista paginada).</p>

    <!-- Imagen de encabezado (pegas tu dataURI o URL aquí) -->
    <img src="data:image/jpeg;base64,"
         alt="F1 car header"
         class="img-fluid rounded shadow mt-3"
         style="max-height:240px; object-fit:cover;">
</section>

<div class="f1-glass p-3 p-md-4">
    <div class="table-responsive">
        <table class="table f1-table align-middle mb-0">
            <thead>
                <tr class="text-danger">
                    <th>Nombre</th>
                    <th>Nacionalidad</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Items)
                {
                    <tr>
                        <td>@d.FullName</td>
                        <td>@d.Nationality</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-danger f1-pill"
                               asp-action="Details" asp-route-id="@d.DriverId">
                                Ver detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación simple (Prev / Página actual / Next) -->
    <nav class="mt-4 d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)">Anterior</a>
            </li>
            <li class="page-item active">
                <span class="page-link">@Model.Page</span>
            </li>
            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>
</div>
