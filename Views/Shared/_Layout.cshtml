<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - F1 Drivers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="f1-bg">
    <nav class="navbar navbar-dark bg-dark border-bottom border-danger sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-danger" asp-controller="Home" asp-action="Index">F1 <span class="text-light">Drivers</span></a>
            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Inicio</a>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="py-4 text-center text-secondary small">
        © @DateTime.Now.Year — Demo Formula 1 MVC
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
